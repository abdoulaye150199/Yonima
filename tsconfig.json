{
  "compilerOptions": {
    // Configuration des dossiers
    "rootDir": "./src",
    "outDir": "./dist",
    
    // Environment Settings
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // Stricter Typechecking Options (temporairement désactivées)
    // "noUncheckedIndexedAccess": true,
    // "exactOptionalPropertyTypes": true,
    
    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    
    // Module resolution
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}